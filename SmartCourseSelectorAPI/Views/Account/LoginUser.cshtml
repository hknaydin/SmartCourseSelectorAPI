@model SmartCourseSelectorWeb.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-card {
            background: #fff;
            padding: 40px; /* Increased padding */
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px; /* Increased max width */
            width: 100%;
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 30px; /* Added extra margin */
                font-size: 1.8rem; /* Increased font size */
            }

        .role-selection {
            display: flex;
            justify-content: center;
            gap: 30px; /* Increased gap between roles */
            margin-bottom: 30px; /* Added extra margin */
        }

            .role-selection label {
                cursor: pointer;
                text-align: center;
            }

            .role-selection img {
                width: 100px; /* Increased icon size */
                height: 100px; /* Increased icon size */
            }

            .role-selection input {
                display: none;
            }

            .role-selection label input:checked + img {
                border: 3px solid #007bff; /* Increased border thickness */
                border-radius: 50%;
            }

        .form-group {
            margin-bottom: 20px; /* Increased spacing between input fields */
        }

        button {
            font-size: 1.2rem; /* Increased button font size */
            padding: 12px; /* Increased padding for better visibility */
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h2>Login</h2>
        <form asp-action="LoginUser" method="post" id="loginForm">
            <div class="role-selection">
                <label>
                    <input asp-for="Role" type="radio" value="Student" checked />
                    <img src="~/images/student.png" alt="Student" />
                    <div>Student</div>
                </label>
                <label>
                    <input asp-for="Role" type="radio" value="Advisor" />
                    <img src="~/images/advisor.png" alt="Advisor" />
                    <div>Advisor</div>
                </label>
            </div>

            <div class="form-group">
                <label for="Username">Username</label>
                <input asp-for="Username" class="form-control" id="Username" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <div class="text-center mt-3">
                <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password</a>
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <p style="color: red; text-align: center; margin-top: 10px;">@ViewBag.Message</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
