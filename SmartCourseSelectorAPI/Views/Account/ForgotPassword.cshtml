@model SmartCourseSelectorWeb.Models.ForgotPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .forgot-password-card {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

            .forgot-password-card h2 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 1.8rem;
            }

        .form-group {
            margin-bottom: 20px;
        }

        button {
            font-size: 1.2rem;
            padding: 12px;
        }

        .back-link {
            display: block;
            text-align: center;
            color: #007bff; /* Set color to blue */
            text-decoration: none;
            font-size: 1.1rem;
        }

            .back-link:hover {
                text-decoration: underline; /* Add underline on hover */
            }
            .labelClass{
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div class="forgot-password-card">
        <h2>Forgot Password</h2>
        <div>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label class="labelClass" for="Email">Email</label>
                    <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
            </form>
        </div>
        <div class="text-center mt-3"> 
            <a href="LoginUser" class="back-link">Back</a>
            </div>
        @if (ViewBag.Message != null)
        {
            <p style="color: green; text-align: center; margin-top: 10px;">@ViewBag.Message</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
